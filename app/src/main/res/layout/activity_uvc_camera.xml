            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="40pt" />

        <TextView
            android:id="@+id/text_title5"
            android:layout_width="180pt"
            android:layout_height="50pt"
            android:layout_marginLeft="1002pt"
            android:layout_marginTop="50pt"
            android:background="#00000000"
            android:gravity="center"
            android:textColor="#FF0000"
            android:textSize="40pt" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100pt"
            android:layout_height="100pt"
            android:layout_marginLeft="1100pt"
            android:background="@mipmap/ic_launcher_ct"></ImageView>

        <SurfaceView
            android:id="@+id/mySurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
        <SurfaceView
            android:id="@+id/mySurfaceView_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <FrameLayout
            android:id="@+id/myFrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


