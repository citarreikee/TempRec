        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            style="@style/btn_style_word"
            android:background="#000000"
            android:gravity="center"
